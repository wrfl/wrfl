= form_for(@user, html: {class: 'form-horizontal'}) do |f|
  .form-group
    = f.label :dj_name, 'DJ name:', class: 'control-label col-sm-5 col-md-4'
    .col-sm-7.col-md-8
      = f.text_field :dj_name, class: 'form-control'
  .form-group
    = f.label :first_name, 'First name:', class: 'control-label col-sm-5 col-md-4'
    .col-sm-7.col-md-8
      = f.text_field :first_name, class: 'form-control'
  .form-group
    = f.label :last_name, 'Last name:', class: 'control-label col-sm-5 col-md-4'
    .col-sm-7.col-md-8
      = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :phone_number, 'Phone number:', class: 'control-label col-sm-5 col-md-4'
    .col-sm-7.col-md-8
      = f.text_field :phone_number, class: 'form-control'
  - if current_user.admin?
    .form-group
      = f.label :role, 'Role:', class: 'control-label col-sm-5 col-md-4'
      .col-sm-7.col-md-8
        = f.select :role, User::VALID_ROLES, {}, class: 'form-control'
  .form-group
    .col-sm-7.col-sm-offset-5.col-md-8.col-md-offset-4
      = f.submit class: 'btn btn-primary'
